{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		// Optimizaciones para builds más rápidos
		"skipLibCheck": true,
		"incremental": true,
		"tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo",
		// Desactivar checks que no son necesarios en build
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		// Usar ES2020 como target para mejor performance
		"target": "ES2020",
		"module": "ESNext"
	},
	"exclude": [
		"node_modules",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"src/setupTests.ts",
		"build",
		"dist",
		"scripts"
	]
}